	<config>
		<fields name="params" addfieldpath="/templates/e4jseasons/php">
			<fieldset name="CONFIGURATION">
				<field name="Header01" type="header" default="Template Layout" label="" description="" />
		    	<field name="tcolour" type="list" default="0" label="Colour Layout" description="Set template colour layout" >
					<option value="0">Sky</option>
					<option value="1">Purple</option>
					<option value="2">Gold</option>
					<option value="3">Green</option>
					<option value="4">Orange</option>
				</field>

				<field name="getmenufixed" type="list" default="0" label="Menu fixed" description="Menu fixed on the top of your website" >
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="sliderwind" type="list" default="0" label="Slider Size" description="With this parameter you can choose if the slider will take all the windows size or a regular size based on smallest images. It works just with our Vik Content Slider module." >
					<option value="0">Window</option>
					<option value="1">Regular</option>
				</field>

				<field name="Header02" type="header" default="Setup the logo" label="" description="" />
				<field name="logo" type="media" preview="true" directory="/images/" label="Logo" description="Insert your logo" />
				<field name="logo-internal" type="media" preview="true" directory="/images/" label="Logo internal pages" description="Insert a different logo for the internal pages" />
				<field name="logolink" type="text" default="" label="Insert your logo link" description="Insert your logo link" />

				<field name="Header03" type="header" default="Setup the website fonts" label="" description="" />
				<field name="headertxt" type="text" default="32px" label="Titles Font Size" description="Set a size for your Titles" />	
				<field name="bodytxt" type="text" default="16px" label="Body text Font Size" description="Set a size for your website text" />
				<field name="bfont" type="groupedlist" default="0" label="Body Font" description="Set template the body layout" >
					<group label="Sans Serif">
						<option value="0">Lato</option>
						<option value="1">PT Sans</option>
						<option value="2">Open Sans</option>
						<option value="3">Droid Sans</option>
						<option value="4">Century Gothic</option>
						<option value="5">Arial</option>
					</group>
					<group label="Serif">
						<option value="6">Lora</option>
						<option value="7">Droid Serif</option>
						<option value="8">Playfair Display</option>
						<option value="9">PT Serif</option>
					</group>
				</field>
				
				<field name="hfont" type="groupedlist" default="6" label="Body Titles font" description="Choose your Body Titles font" >
					<group label="Sans Serif">
						<option value="0">Lato</option>
						<option value="1">PT Sans</option>
						<option value="2">Open Sans</option>
						<option value="3">Droid Sans</option>
						<option value="4">Century Gothic</option>
						<option value="5">Arial</option>
					</group>
					<group label="Serif">
						<option value="6">Lora</option>
						<option value="7">Droid Serif</option>
						<option value="8">Playfair Display</option>
						<option value="9">PT Serif</option>
					</group>
				</field>

				<field name="Header04" type="header" default="Setup the menu layout for the Homepage" label="" description="" />
				<field name="menu-color" type="color" default="#fff" label="Menu text color" description="This color will be apply just in the Homepage of your website if you have enabled the Window slider." />
			</fieldset>
			<fieldset name="options">
				<field name="Header05" type="header" default="Advanced Options" label="" description="" />
				<field name="responsive" type="list" default="0" label="Responsive layout" description="This setting allows to display your website compatible with devices like mobile, Ipad, etc.." >
					<option value="0">Yes</option>
					<option value="1">No</option>
				</field>

				<field name="enabless" type="list" default="1" label="Less library" description="This setting allows you to enable the Less library in the case that your server has problems with LESS." >
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="ordernumber" type="ordernumber" label="e4j Order Number" description="Insert your e4j order number to be always updated whenever a new version of the template is released." />
			</fieldset>
		</fields>
	</config>

